extends ../base

block content

    .container

        if(error)
            .alert.alert-danger
                a(href='#', data-dismiss='alert', aria-label='close').close &times;
                p #{error}

        h3 Jury login

        form(role='form', action="/jury/login", method="post")
            .form-group
                input.form-control(type='password', name="token", placeholder='Entrez un token pour le jury')
            button.btn.btn-success(type='submit') Login
